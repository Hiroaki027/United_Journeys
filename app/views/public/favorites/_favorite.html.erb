<% if post.favorited_by?(current_member) %>
  <%= link_to post_favorites_path(post),method: :delete, local: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <span style="color: red;"><%= post.favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post),method: :post,  local: true do %>
    <i class="fa-regular fa-heart"></i><%= post.favorites.count %>
  <% end %>
<% end %>