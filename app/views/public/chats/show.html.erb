<div class= "container">
  <div class= "row row justify-content-center">
    <div class= "col-xs-12 col-md-6">
      <h1 id="room" data-room="<%= @room.id %>" data-member="<%= current_member.id %>">
        <%= @member.nick_name %> さんとのチャット
      </h1>
      <div class="message" style="width: 400px;">
        <% @chats.each do |chat| %>
          <% if chat.member_id == current_member.id %>
            <p style="text-align: right;"><%= chat.member.nick_name %>:&emsp;<%= chat.message %></p>
          <% else %>
            <p style="text-align: left;"><%= chat.member.nick_name %>:&emsp;<%= chat.message %></p>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class= "row pt-5">
      <div class="col-xs-12 col-md-12 align-self-end">
        <%= form_with model: @chat, data: {remote: true} do |f| %>
          <%= f.text_field :message ,required: true%>
          <%= f.hidden_field :room_id %>
          <%= f.submit "送信", class: 'btn btn-success btn-block mt-2 ' %>
        <% end %>
      </div>
    </div>
  </div>
</div>