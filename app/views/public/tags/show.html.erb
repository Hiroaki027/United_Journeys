<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if @tagged_posts.present? %>
        <h4 class="headline mt-5 ml-5">Tag: <%= @tag.name %>の一覧（<%= @total_posts_count %>件）</h4>
        <div class="row mt-3">
          <% @tagged_posts = @tagged_posts.order(impressions_count: :desc) %>
          <table class= "table table-hover mt-3">
            <thead>
              <tr>
                <th>タイトル</th>
                <th></th>
                <th>ユーザー名</th>
                <th>作成日</th>
                <th></th>
                <th></th>
                <th></th>
                <th>タグ名</th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each  do |post| %>
                <tr>
                  <td><%= post.title %></td>
                  <td><%= image_tag post.post_images[0].variant(resize: '50x500') %></td>
                  <td><%= post.member.nick_name %></td>
                  <td><%= post.created_at.strftime('%Y/%m/%d/%H:%M') %></td>
                  <td><%= link_to "詳細", post_path(post.id) %></td>
                  <td id= "favorite_buttons_<%= post.id %>">
                    <%= render "public/favorites/favorite", post: post %>
                  </td>
                  <td>コメント数:<%= post.comments.count %></td>
                  <td>
                    <% post.tag_list.first(2).each do |tag| %>
                      <span class="tag-btn ml-3"><%= link_to tag, tag_path(tag) %></span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
  　　  <% else %>
        <h1 class="tags-title">Tag not found</h1>
      <% end %>
      <!--<div class="pagination justify-content-center">-->
      <!-- %= paginate @tagged_posts, theme: 'bootstrap-5' %>-->
      <!--</div>-->
    </div>
  </div>
</div>