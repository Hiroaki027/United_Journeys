<div class="tabs d-flex justify-content-between align-items-center">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="tab" href="#public">公開中</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#draft">下書き</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#private">非公開</a>
    </li>
  </ul>
</div>
<div class="tab-content">
  <div id="public" class="tab-pane fade show active">
    <%= render "public/posts/post_item", posts: public_posts %>
  </div>
  <div id="draft" class="tab-pane fade">
    <%= render "public/posts/post_item",  posts: draft_posts %>
  </div>
  <div id="private" class="tab-pane fade">
    <%= render "public/posts/post_item",  posts: private_posts %>
