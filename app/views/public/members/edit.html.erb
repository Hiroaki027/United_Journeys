<div class= "container">
  <div class= "row">
    <div class= "col-md-8 offset-2 mt-3">
      <h2>会員編集</h2>
      <%= form_with model: @member do |f| %>
        <%= render "public/shared/error_messages", resource: @member %>
      <div class= "row row-justify-content-center">
        
        <div class= "col-md-6 my-3">
          <label for="inputName">ユーザー名</label><br>
          <%= f.text_field :nick_name, autofocus: true, id:"inputName", placeholder:"inputName"%><br />
        </div>
        
        <div class= "col-md-6 my-3">
          <label for="inputName">居住地</label><br>
          <%= f.text_field :residence, autofocus: true, id:"inputResidence", placeholder:"inputResidence"%><br />
        </div>
        
        <div class= "col-md-12 mb-3">
          <label for="inputImage">プロフィール画像</label><br />
          <%= f.file_field :profile_image, accept: "image/*" %><br />
        </div>
        
        <div class= "col-md-12 mb-3">
          <label for="inputIntroduction">自己紹介</label><br />
          <%= f.text_area :introduction, autofocus: true, cols: '80', rows: '8', id:"inputIntroduction" %><br />
        </div>
        
        <div class= "col-md-3">
          <%= f.submit "変更を保存", class: 'btn btn-primary btn-block ' %>
        </div>
        
        <div class= "col-md-3">
          <%= link_to "退会する", withdrawal_member_path, method: :patch, class: "btn btn-danger", "data-confirm" => "本当に退会しますか？" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

