<table class="table mt-3">
  <thead>
    <tr>
      <th></th>
      <th>ユーザー名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% members.each do |member| %>
    <tr>
      <td><%= image_tag member.get_profile_image, size: '50x50' %></td>
      <td><%= link_to member.nick_name ,member_path(member.id) %></td>
      <td>フォロー数: <%= link_to member.followings.count, member_followings_path(member) %></td>
      <td>フォロワー数: <%= link_to member.followers.count, member_followers_path(member) %></td>
      <td><%= render "public/relationships/btn", member: member, options: { class: "follow-link" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>