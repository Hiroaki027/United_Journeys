 <table class="table">
   <thead>
     <tr>
       <th></th>
       <th>ユーザー名</th>
       <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
     <% members.each do |member| %>
      <tr>
        <td><%= image_tag member.get_profile_image, size: '50x50' %></td>
        <td><%= member.nick_name %></td>
        <td>フォロー数: <%= member.followings.count %></td>
        <td>フォロワー数: <%= member.followers.count %></td>
        <td><%= render "public/relationships/btn", member: member, options: { class: "follow-link" } %></td>
        <td><%= link_to "会員詳細", member %></td>
       </tr>
     <% end %>
   </tbody>
 </table>