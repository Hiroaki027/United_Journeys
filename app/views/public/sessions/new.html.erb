<div class= "container">
  <div class= "row">
    <div class= "col-md-6 offset-3 mt-3">
      <h2>ログイン画面</h2>
      <%= form_with model: @member, url: member_session_path do |f| %>
        <div class="my-3 field">
          <%= f.label :email %><br />
          <%= f.email_field :email,size: 40, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="mb-3 field">
          <%= f.label :password %><br />
          <%= f.password_field :password,size: 40, autocomplete: "current-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="mb-3 field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "ログイン", class: 'btn btn-primary btn-block mt-2' %>
        </div>
      <% end %>
      <!--%= render "public/shared/links" %>-->
    </div>
  </div>
</div>