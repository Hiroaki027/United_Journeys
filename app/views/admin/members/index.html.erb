<div class= "container">
  <div class= "row">
    <div class= "col-md-8 offset-md-1">
      <h2>会員一覧<i class="fa-solid fa-user-group ml-2"></i></h2>
      <table class= "table table-hover">
        <tr>
          <th>会員画像</th>
          <th>ユーザー名</th>
          <th>退会ステータス</th>
        </tr>
        <% @members.each do |member| %>
          <tr data-href= "<%= admin_member_path(member) %>">
            <td><%= image_tag member.get_profile_image ,size: "50x50"%></td>
            <td><%= member.nick_name %></td>
            <td>
              <% if member.is_deleted == false %>
                <strong class="text-success">有効</strong>
              <% else %>
                <strong class="text-muted">退会</strong>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<script>
  $(function(){
  $('tr[data-href]').on('dblclick', function(){
    location.href = $(this).data('href');
    });
  });
</script>
